        xmlns:prism="http://prismlibrary.com/"
        xmlns:viewmodels="clr-namespace:PrismDemo.ViewModels"
        Width="600"
        Height="400"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
